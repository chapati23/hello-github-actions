{
  "$schema": "https://git.brickblock.sh/devops/project-templates/raw/master/schema.json",
  "packageName": "hello-github-actions",
  "ci": {
    "image": "node:10.14",
    "jobs": [
      "cache",
      "setup",
      "lint",
      "test",
      "flow",
      "flow-coverage",
      "build-npm-package",
      "release",
      "publish"
    ],
    "requiredEnvVars": [
      "SLACK_WEBHOOK_URL"
    ]
  },
  "database": false,
  "preset": "library",
  "description": "library - for libraries that will get published on npm",
  "strongConfig": false,
  "publishAsNpmPackage": true,
  "ignoreFiles": []
}
